<p id="notice"><%= notice %></p>

<h1>Listing Shop Views</h1>

<table>
  <thead>
    <tr>
      <th>Shop view name</th>
      <th>Shop view image</th>
      <th>Shop view description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_views.each do |shop_view| %>
      <tr>
        <td><%= shop_view.shop_view_name %></td>
        <td><%= shop_view.shop_view_image %></td>
        <td><%= shop_view.shop_view_description %></td>
        <td><%= link_to 'Show', shop_view %></td>
        <td><%= link_to 'Edit', edit_shop_view_path(shop_view) %></td>
        <td><%= link_to 'Destroy', shop_view, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

